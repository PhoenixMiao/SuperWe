<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_background"
            android:text="@string/superwe"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />


        <view
            android:id="@+id/cb_invite_friends_into_group"
            class="androidx.appcompat.widget.AppCompatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/add_friends" />

        <view
            android:id="@+id/edit_group"
            class="androidx.appcompat.widget.AppCompatEditText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.5"
            android:hint="@string/group_name" />

        <view
            android:id="@+id/edit_friends"
            class="androidx.appcompat.widget.AppCompatEditText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.5"
            android:hint="@string/friends_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/data_reset" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/sure" />
        </LinearLayout>

        <view
            android:id="@+id/cb_auto_zan"
            class="androidx.appcompat.widget.AppCompatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/auto_zan" />

        <view
            android:id="@+id/cb_lucky_money"
            class="androidx.appcompat.widget.AppCompatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/auto_receive_lucky_money" />

        <view
            android:id="@+id/auto_reply"
            class="androidx.appcompat.widget.AppCompatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/auto_reply" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/auto_reply_content"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:autofillHints="true"
                android:hint="@string/edit_content"
                android:inputType="text" />

            <Button
                android:id="@+id/content_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_edit" />
        </LinearLayout>

        <view
            android:id="@+id/batch_reply"
            class="androidx.appcompat.widget.AppCompatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/batch_reply" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/batch_reply_content"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:autofillHints="true"
                android:hint="@string/edit_content"
                android:inputType="text" />

            <Button
                android:id="@+id/content_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_edit" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/btn_display_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/display_window"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_weight="0.5"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_open_accessibility"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/open_accessibility" />

                <Button
                    android:id="@+id/btn_open_wechat"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="1dp"
                    android:text="@string/open_wechat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/btn_group_charge"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/group_charge" />

                <Button
                    android:id="@+id/btn_batch_read"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:text="@string/batch_read" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btn_record_action"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/record_action" />

                <Button
                    android:id="@+id/btn_repeat_action"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:text="@string/repeat_action" />

            </LinearLayout>

        </LinearLayout>


</ScrollView>